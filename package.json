{
  "name": "hardhat-project",
  "devDependencies": {
    "@nomicfoundation/hardhat-foundry": "^1.1.3",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.22.19",
    "hardhat-deploy": "^0.11.45",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test:hardhat": "hardhat test test/hardhat/*.ts",
    "test:forge": "forge test -vv",
    "test": "yarn test:hardhat && yarn test:forge",
    "deploy": "hardhat deploy",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "deploy:holesky": "hardhat deploy --network holesky",
    "verify": "hardhat run scripts/verify.ts",
    "verify:holesky": "hardhat run scripts/verify.ts --network holesky",
    "verify:sepolia": "hardhat run scripts/verify.ts --network sepolia",
    "forge:deploy": "bash scripts/forge/deploy.sh",
    "forge:deploy:holesky": "bash scripts/forge/deploy.sh holesky",
    "forge:deploy:sepolia": "bash scripts/forge/deploy.sh sepolia",
    "forge:verify": "bash scripts/forge/verify.sh",
    "forge:verify:holesky": "bash scripts/forge/verify.sh --network holesky",
    "forge:verify:sepolia": "bash scripts/forge/verify.sh --network sepolia"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.1"
  }
}
